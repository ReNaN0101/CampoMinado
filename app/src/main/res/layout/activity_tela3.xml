<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6B6C73"
    tools:context=".tela3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/titulo"
        android:text="Parabens voce encontrou a bomba"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="50dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="130dp"
        android:src="@drawable/ninja" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:text="Criador: Renan de Andrade Terra"
        android:fontFamily="@font/botoes"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tentivas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="140dp"
        android:layout_marginBottom="250dp"
        android:fontFamily="@font/titulo"
        android:text="Tentativas"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/tv01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="180dp"
        android:layout_marginBottom="200dp"
        android:fontFamily="@font/titulo"
        android:text="30"
        android:textColor="@color/black"
        android:textSize="30dp" />

</RelativeLayout>
